<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="com.chasibhai.bel.chasibhai.HomeActivity">

        <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar_id"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="230dp">

            <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsing_id"
                    app:expandedTitleMarginStart="20dp"
                    app:contentScrim="@color/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                        android:layout_marginBottom="8dp"
                        card_view:layout_collapseMode="parallax"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardBackgroundColor="#4caf50"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                                android:padding="5dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <LinearLayout
                                    android:layout_marginTop="20dp"
                                    android:weightSum="2"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp">
                                <LinearLayout
                                        android:layout_weight="1.1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                    <TextView
                                            android:id="@+id/w_status_id"
                                            android:textStyle="normal"
                                            android:textSize="16sp"
                                            android:textColor="#ffffff"
                                            android:gravity="center"
                                            android:text="@string/weather_status"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>
                                </LinearLayout>
                                <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_weight="0.9"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                    <Spinner
                                            android:id="@+id/spinner_id"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                    </Spinner>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                    android:weightSum="2"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <LinearLayout
                                        android:weightSum="2"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                    <LinearLayout
                                            android:weightSum="2"
                                            android:orientation="horizontal"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                        <LinearLayout
                                                android:gravity="center"
                                                android:layout_weight="1.3"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                            <ImageView
                                                    android:padding="8dp"
                                                    android:background="@drawable/temp_rd"
                                                    android:src="@drawable/temperature"
                                                    android:layout_width="50dp"
                                                    android:layout_height="50dp"/>
                                        </LinearLayout>
                                        <LinearLayout
                                                android:layout_weight="0.7"
                                                android:gravity="center"
                                                android:orientation="vertical"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                            <TextView
                                                    android:id="@+id/w_temp_id"
                                                    android:textAllCaps="false"
                                                    android:textStyle="bold"
                                                    android:textSize="22sp"
                                                    android:textColor="#ffffff"
                                                    android:gravity="left"
                                                    android:text="৬২° সেঃ"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"/>
                                            <TextView
                                                    android:textAllCaps="false"
                                                    android:textStyle="bold"
                                                    android:textSize="15sp"
                                                    android:textColor="#ffffff"
                                                    android:gravity="left"
                                                    android:text="তাপমাত্রা"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                        <LinearLayout
                                                android:gravity="center"
                                                android:layout_weight="1.3"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                            <ImageView
                                                    android:padding="8dp"
                                                    android:background="@drawable/humidity_rd"
                                                    android:src="@drawable/humidity"
                                                    android:layout_width="50dp"
                                                    android:layout_height="50dp"/>
                                        </LinearLayout>
                                        <LinearLayout
                                                android:gravity="center"
                                                android:orientation="vertical"
                                                android:layout_weight="0.7"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                            <TextView
                                                    android:id="@+id/w_humi_id"
                                                    android:textAllCaps="false"
                                                    android:textStyle="bold"
                                                    android:textSize="22sp"
                                                    android:textColor="#ffffff"
                                                    android:gravity="left"
                                                    android:text="৭১%"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"/>
                                            <TextView
                                                    android:textAllCaps="false"
                                                    android:textStyle="bold"
                                                    android:textSize="15sp"
                                                    android:textColor="#ffffff"
                                                    android:gravity="left"
                                                    android:text="জলীয় বাষ্প"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                        android:weightSum="2"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                    <LinearLayout
                                            android:weightSum="2"
                                            android:orientation="horizontal"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                        <LinearLayout
                                                android:gravity="center"
                                                android:layout_weight="1.3"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                            <ImageView
                                                    android:padding="8dp"
                                                    android:background="@drawable/rain_rd"
                                                    android:src="@drawable/rain"
                                                    android:layout_width="50dp"
                                                    android:layout_height="50dp"/>
                                        </LinearLayout>
                                        <LinearLayout
                                                android:gravity="center"
                                                android:orientation="vertical"
                                                android:layout_weight="0.7"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                            <TextView
                                                    android:id="@+id/w_rain_id"
                                                    android:textAllCaps="false"
                                                    android:textStyle="bold"
                                                    android:textSize="22sp"
                                                    android:textColor="#ffffff"
                                                    android:gravity="left"
                                                    android:text="০.০মিঃমিঃ"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"/>
                                            <TextView
                                                    android:textAllCaps="false"
                                                    android:textStyle="bold"
                                                    android:textSize="15sp"
                                                    android:textColor="#ffffff"
                                                    android:gravity="left"
                                                    android:text="বৃষ্টিপাত"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                            android:weightSum="2"
                                            android:orientation="horizontal"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                        <LinearLayout
                                                android:gravity="center"
                                                android:layout_weight="1.3"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                            <ImageView
                                                    android:padding="8dp"
                                                    android:background="@drawable/wind_rd"
                                                    android:src="@drawable/wind"
                                                    android:layout_width="50dp"
                                                    android:layout_height="50dp"/>
                                        </LinearLayout>
                                        <LinearLayout
                                                android:gravity="center"
                                                android:orientation="vertical"
                                                android:layout_weight="0.7"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                            <TextView
                                                    android:id="@+id/w_wind_id"
                                                    android:textAllCaps="false"
                                                    android:textStyle="bold"
                                                    android:textSize="22sp"
                                                    android:textColor="#ffffff"
                                                    android:gravity="left"
                                                    android:text="৩.৯মি/সে"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"/>
                                            <TextView
                                                    android:textAllCaps="false"
                                                    android:textStyle="bold"
                                                    android:textSize="15sp"
                                                    android:textColor="#ffffff"
                                                    android:gravity="left"
                                                    android:text="বাতাসের গতি"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar_id"
                        android:fitsSystemWindows="true"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize">

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                    android:id="@+id/parents_id"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:gravity="center"
                        android:weightSum="4"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">
                    <LinearLayout
                            android:id="@+id/call_id"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView
                                android:padding="3dp"
                                android:layout_weight="1.3"
                                android:src="@drawable/helpline"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        <TextView
                                android:layout_weight="0.7"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="#000000"
                                android:text="কল করুন"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:id="@+id/price_id"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView
                                android:padding="3dp"
                                android:layout_weight="1.3"
                                android:src="@drawable/price"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        <TextView
                                android:layout_weight="0.7"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="#000000"
                                android:text="বাজার দর"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:id="@+id/website_id"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView
                                android:padding="3dp"
                                android:layout_weight="1.3"
                                android:src="@drawable/website"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        <TextView
                                android:layout_weight="0.7"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="#000000"
                                android:text="কৃষি তথ্য"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:id="@+id/feedback_id"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView
                                android:padding="3dp"
                                android:layout_weight="1.3"
                                android:src="@drawable/feedback"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>
                        <TextView
                                android:layout_weight="0.7"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="#000000"
                                android:text="মতামত"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="#a4d11c"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                        <TextView
                                android:textColor="#2d2d2d"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textAllCaps="false"
                                android:gravity="center"
                                android:text="@string/season_title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_season_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
